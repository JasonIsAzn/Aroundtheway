@using Microsoft.AspNetCore.Http

@{
    var userId = Context.Session.GetInt32("SessionUserId");
}

@if (userId != null)
{
<nav class="bg-white border-b border-gray-100 px-6 py-3 flex items-center justify-between fixed top-0 left-0 right-0 z-50">
        <div class="flex space-x-6">
            <a href="/home" class="text-sm font-medium text-black hover:text-gray-600 transition-colors px-3 py-2">HOME</a>
            <a href="/posts" class="text-sm font-medium text-black hover:text-gray-600 transition-colors px-3 py-2">INVENTORY</a>
            <a href="/admin" class="text-sm font-medium text-black hover:text-gray-600 transition-colors px-3 py-2">ADMIN</a>
            <a href="/admin/transactions" class="text-sm font-medium text-black hover:text-gray-600 transition-colors px-3 py-2">TRANSACTIONS</a>
        </div>

        <div>
            <form method="post" action="/api/auth/logout">
                <button type="submit" class="px-6 py-2 bg-black text-white hover:bg-gray-900 transition-colors text-sm font-medium">
                    LOGOUT
                </button>
            </form>
        </div>
    </nav>
}