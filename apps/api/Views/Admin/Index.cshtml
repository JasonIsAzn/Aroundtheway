@using Aroundtheway.Api.ViewModels.Users
@model List<UserViewModel>

@{
    var success = TempData["Success"] as string;
    var error = TempData["Error"] as string;
    var info = TempData["Info"] as string;
}

<h1>Users</h1>

@if (!string.IsNullOrWhiteSpace(success))
{
    <div>@success</div>
}
@if (!string.IsNullOrWhiteSpace(error))
{
    <div>@error</div>
}
@if (!string.IsNullOrWhiteSpace(info))
{
    <div>@info</div>
}

<table border="1" cellpadding="6" cellspacing="0">
    <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Role</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Id</td>
                <td>@u.Email</td>
                <td>@(u.IsAdmin ? "Admin" : "User")</td>
                <td>
                    @if (u.IsAdmin)
                    {
                        <form method="post" action="/admin/demote/@u.Id" style="display:inline">
                            @Html.AntiForgeryToken()
                            <button type="submit">Demote to User</button>
                        </form>
                    }
                    else
                    {
                        <form method="post" action="/admin/promote/@u.Id" style="display:inline">
                            @Html.AntiForgeryToken()
                            <button type="submit">Promote to Admin</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>