@model Aroundtheway.Api.ViewModels.Account.LoginFormViewModel

<div class="min-h-screen flex flex-col items-center justify-center p-6">
    <div class="max-w-[420px] w-full">
        <h1 class="text-lg font-light uppercase tracking-[.15em] text-black text-center mb-8">Admin Login</h1>

        <form method="post" action="/api/auth/login" class="space-y-6">
            <div>
                <label asp-for="Email" class="block text-xs font-light uppercase tracking-[.15em] text-black mb-2">
                    Email
                </label>
                <input asp-for="Email"
                    class="mt-1 appearance-none relative block w-full px-3 py-[10px] border border-black/20 text-black text-sm focus:outline-none focus:border-black transition-colors" 
                    placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-red-600 text-xs mt-1 block"></span>
            </div>

            <div>
                <label asp-for="Password" class="block text-xs font-light uppercase tracking-[.15em] text-black mb-2">
                    Password
                </label>
                <input asp-for="Password" type="password"
                    class="mt-1 appearance-none relative block w-full px-3 py-[10px] border border-black/20 text-black text-sm focus:outline-none focus:border-black transition-colors" 
                    placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-red-600 text-xs mt-1 block"></span>
            </div>

@if (!string.IsNullOrEmpty(Model?.Error))
            {
                <div class="rounded-none bg-red-50 p-4">
                    <p class="text-xs uppercase tracking-[.15em] text-red-800">@Model.Error</p>
                </div>
            }

            <button type="submit"
                class="w-full py-[10px] text-xs font-light uppercase tracking-[.15em] text-white bg-black hover:bg-gray-900 focus:outline-none transition-colors">
                Login
            </button>
        </form>

        <div class="mt-8 pt-6 border-t border-gray-200">
            <div class="text-center">
                <p class="text-sm text-gray-600 mb-4">Or continue with Google</p>
                <div id="g_id_onload"
                    data-client_id="370878605755-ag67ab20l16ebblvkt5bbf65kcd5p40s.apps.googleusercontent.com"
                    data-callback="handleCredentialResponse" data-auto_prompt="false">
                </div>
                <div class="g_id_signin flex justify-center" data-type="standard" data-size="large"
                    data-theme="outline"></div>
            </div>
        </div>
    </div>
</div>

<script src="https://accounts.google.com/gsi/client" async defer></script>

<form id="googleForm" method="post" action="/api/auth/google-web" style="display:none">
    <input type="hidden" id="googleIdToken" name="IdToken" />
</form>

<script>
    function handleCredentialResponse(resp) {
        if (!resp || !resp.credential) {
            alert("Google login failed");
            return;
        }
        document.getElementById("googleIdToken").value = resp.credential;
        document.getElementById("googleForm").submit();
    }
</script>