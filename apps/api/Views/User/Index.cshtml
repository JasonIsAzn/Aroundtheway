@using Aroundtheway.Api.ViewModels.Users
@model UsersViewModel

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-lg font-light uppercase tracking-[.15em] text-black">User Directory</h1>
        <a href="/admin"
           class="inline-flex items-center px-6 py-[10px] text-xs font-light uppercase tracking-[.15em] text-black hover:text-black/70 focus:outline-none transition-colors">
            Back to Admin
        </a>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full border-collapse border border-black/10">
            <thead>
                <tr class="bg-black/5">
                    <th class="text-left p-4 text-xs font-light uppercase tracking-[.15em] text-black">#</th>
                    <th class="text-left p-4 text-xs font-light uppercase tracking-[.15em] text-black">Email</th>
                    <th class="text-left p-4 text-xs font-light uppercase tracking-[.15em] text-black">Google ID</th>
                    <th class="text-left p-4 text-xs font-light uppercase tracking-[.15em] text-black">Auth Type</th>
                    <th class="text-left p-4 text-xs font-light uppercase tracking-[.15em] text-black">Created</th>
                    <th class="text-left p-4 text-xs font-light uppercase tracking-[.15em] text-black">Updated</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-black/5">
                @foreach (var user in Model.Users)
                {
                    <tr class="hover:bg-black/[0.02] transition-colors">
                        <td class="p-4 text-sm text-black/60">#@user.Id</td>
                        <td class="p-4 text-sm">@user.Email</td>
                        <td class="p-4 text-sm text-black/60 font-mono text-xs">
                            @if (!string.IsNullOrEmpty(user.GoogleSub))
                            {
                                @user.GoogleSub
                            }
                            else
                            {
                                <span class="text-black/40">â€”</span>
                            }
                        </td>
                        <td class="p-4">
                            @if (!string.IsNullOrEmpty(user.GoogleSub))
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 text-[10px] font-light uppercase tracking-[.15em] bg-black text-white">
                                    Google
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 text-[10px] font-light uppercase tracking-[.15em] bg-black/5 text-black">
                                    Password
                                </span>
                            }
                        </td>
                        <td class="p-4 text-sm text-black/60">@user.CreatedAt.ToString("MMM d, yyyy")</td>
                        <td class="p-4 text-sm text-black/60">@user.UpdatedAt.ToString("MMM d, yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Users.Any())
    {
        <div class="flex items-center justify-center h-40 border border-black/10 mt-8">
            <p class="text-xs uppercase tracking-[.15em] text-black/40">No users found</p>
        </div>
    }
</div>