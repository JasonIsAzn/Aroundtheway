@{
    var currentUser = ViewBag.CurrentUser as Aroundtheway.Api.Models.User;
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="text-center mb-12">
        <h1 class="text-lg font-light uppercase tracking-[.15em] text-black mb-2">Aroundtheway</h1>
        <p class="text-xs uppercase tracking-[.15em] text-black/60">Admin Development Area</p>
    </div>

    @if (currentUser != null)
    {
        <div class="mb-12 p-6 bg-white border border-black/10 max-w-2xl mx-auto">
            <h2 class="text-xs font-light uppercase tracking-[.15em] text-black mb-6">Current Session</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 text-xs">
                <div>
                    <span class="text-black/60 uppercase tracking-[.15em]">ID:</span>
                    <span class="text-black ml-2">@currentUser.Id</span>
                </div>
                <div>
                    <span class="text-black/60 uppercase tracking-[.15em]">Email:</span>
                    <span class="text-black ml-2">@currentUser.Email</span>
                </div>
                <div>
                    <span class="text-black/60 uppercase tracking-[.15em]">Google Sub:</span>
                    <span class="text-black ml-2 font-mono">@currentUser.GoogleSub</span>
                </div>
                <div>
                    <span class="text-black/60 uppercase tracking-[.15em]">Role:</span>
                    <span class="text-black ml-2">@(currentUser.IsAdmin ? "Admin" : "User")</span>
                </div>
                <div>
                    <span class="text-black/60 uppercase tracking-[.15em]">Created:</span>
                    <span class="text-black ml-2">@currentUser.CreatedAt.ToString("MMM d, yyyy")</span>
                </div>
                <div>
                    <span class="text-black/60 uppercase tracking-[.15em]">Updated:</span>
                    <span class="text-black ml-2">@currentUser.UpdatedAt.ToString("MMM d, yyyy")</span>
                </div>
            </div>

            <div class="mt-6 pt-6 border-t border-black/10">
                <form method="post" action="/api/auth/logout" class="inline-block">
                    @Html.AntiForgeryToken()
                    <button type="submit"
                        class="py-[10px] px-6 text-xs font-light uppercase tracking-[.15em] text-white bg-black hover:bg-gray-900 transition-colors">
                        Logout
                    </button>
                </form>
            </div>
        </div>
    }

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-4xl mx-auto">
        <a href="/api/status/db"
            class="block bg-white border border-black/10 hover:border-black/20 p-6 text-center transition-colors">
            <p class="text-xs font-light uppercase tracking-[.15em] text-black mb-2">DB Connection</p>
            <p class="text-[10px] uppercase tracking-[.15em] text-black/60">Test database ping</p>
        </a>

        <a href="/account/login"
            class="block bg-white border border-black/10 hover:border-black/20 p-6 text-center transition-colors">
            <p class="text-xs font-light uppercase tracking-[.15em] text-black mb-2">Login</p>
            <p class="text-[10px] uppercase tracking-[.15em] text-black/60">Authentication form</p>
        </a>

        <a href="/user"
            class="block bg-white border border-black/10 hover:border-black/20 p-6 text-center transition-colors">
            <p class="text-xs font-light uppercase tracking-[.15em] text-black mb-2">User Directory</p>
            <p class="text-[10px] uppercase tracking-[.15em] text-black/60">View all users</p>
        </a>

        <a href="/admin"
            class="block bg-white border border-black/10 hover:border-black/20 p-6 text-center transition-colors">
            <p class="text-xs font-light uppercase tracking-[.15em] text-black mb-2">Admin Panel</p>
            <p class="text-[10px] uppercase tracking-[.15em] text-black/60">User management</p>
        </a>

        <a href="/posts"
            class="block bg-white border border-black/10 hover:border-black/20 p-6 text-center transition-colors">
            <p class="text-xs font-light uppercase tracking-[.15em] text-black mb-2">Posts</p>
            <p class="text-[10px] uppercase tracking-[.15em] text-black/60">Content management</p>
        </a>

        <a href="/posts/new" class="block bg-black hover:bg-gray-900 p-6 text-center transition-colors">
            <p class="text-xs font-light uppercase tracking-[.15em] text-white mb-2">New Post</p>
            <p class="text-[10px] uppercase tracking-[.15em] text-white/60">Create content</p>
        </a>
    </div>
</div>