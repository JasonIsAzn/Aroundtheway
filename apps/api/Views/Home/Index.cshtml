@{
    var currentUser = ViewBag.CurrentUser as Aroundtheway.Api.Models.User;
}

<div class="sm:mx-auto sm:w-full max-w-[420px]">
    <h2 class="mt-6 text-center text-lg font-light tracking-[.15em] uppercase text-black">
        Dev Debug Area
    </h2>
</div>

    <div class="mt-8 sm:mx-auto sm:w-full max-w-[420px]">
        <div class="py-8 px-4">
            @if (currentUser != null)
            {
                <div class="mb-8 space-y-4">
                    <h3 class="text-xs font-light uppercase tracking-[.15em] text-black">Logged In User</h3>
                    <div class="text-sm space-y-2 text-black/60">
                        <p><strong class="text-black">ID:</strong> @currentUser.Id</p>
                        <p><strong class="text-black">Email:</strong> @currentUser.Email</p>
                        <p><strong class="text-black">Admin:</strong> @currentUser.IsAdmin</p>
                    </div>
                    <form method="post" action="/api/auth/logout">
                        <button type="submit" class="w-full py-[10px] text-xs font-light uppercase tracking-[.15em] text-white bg-black hover:bg-gray-900 focus:outline-none transition-colors">
                            Logout
                        </button>
                    </form>
                </div>
            }

            <div class="space-y-4">
                <a href="/api/status/db" class="block w-full py-[10px] px-4 border border-black text-xs font-light uppercase tracking-[.15em] text-center text-black hover:bg-black hover:text-white transition-colors">
                    DB Ping
                </a>

                <a href="/account/login" class="block w-full py-[10px] px-4 border border-black text-xs font-light uppercase tracking-[.15em] text-center text-black hover:bg-black hover:text-white transition-colors">
                    Login Page
                </a>

                <a href="/admin" class="block w-full py-[10px] px-4 border border-black text-xs font-light uppercase tracking-[.15em] text-center text-black hover:bg-black hover:text-white transition-colors">
                    View Users
                </a>
            </div>
        </div>
    </div>
</div>
