@using Aroundtheway.Api.ViewModels.Post
@model IEnumerable<PostRowViewModel>

@{
    ViewData["Title"] = "All Posts";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex justify-between items-center mb-8">
        <h2 class="text-lg font-light uppercase tracking-[.15em] text-black">All Posts</h2>
        <a href="/posts/new" 
           class="inline-flex items-center px-6 py-[10px] text-xs font-light uppercase tracking-[.15em] text-white bg-black hover:bg-gray-900 focus:outline-none transition-colors">
            Create New Post
        </a>
    </div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
    @if (Model != null && Model.Any())
    {
        foreach (var post in Model)
        {
            <div class="group bg-white border border-black/10 hover:border-black/20 transition-colors">
                <div class="aspect-square overflow-hidden bg-gray-100">
                    @if (!string.IsNullOrWhiteSpace(post.FirstImageUrl))
                    {
                        <img src="@post.FirstImageUrl" 
                             alt="@post.ProductName" 
                             loading="lazy" 
                             decoding="async"
                             class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" />
                        @if (post.ImageCount > 1)
                        {
                            <span class="absolute right-2 bottom-2 text-[10px] px-2 py-0.5 bg-black/70 text-white uppercase tracking-wider">
                                +@(post.ImageCount - 1)
                            </span>
                        }
                    }
                    else
                    {
                        <div class="w-full h-full flex items-center justify-center text-xs uppercase tracking-[.15em] text-black/40">
                            No image
                        </div>
                    }
                </div>
                
                <div class="p-4">
                    <p class="text-xs uppercase tracking-[.15em] text-black/60 mb-1">#@post.Id</p>
                    <h3 class="text-sm uppercase tracking-[.1em] text-black mb-4">@post.ProductName</h3>
                    
                    <div class="flex items-center justify-between pt-4 border-t border-black/5">
                        <a href="/posts/@post.Id/edit" 
                           class="text-xs uppercase tracking-[.15em] text-black hover:text-black/70 transition-colors">
                            Edit
                        </a>
                        <form method="post" action="/posts/@post.Id/destroy" class="inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" 
                                    onclick="return confirm('Delete this post?');"
                                    class="text-xs uppercase tracking-[.15em] text-red-600 hover:text-red-700 transition-colors">
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-span-full flex items-center justify-center h-40 border border-black/10">
            <p class="text-xs uppercase tracking-[.15em] text-black/40">No posts found</p>
        </div>
    }
</div>

</div>
